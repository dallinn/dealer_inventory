<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Price</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.manufacturer %> </td>
        <td><%= post.model %></td>
        <td><%= post.price %></td>
        <td><%= truncate(post.body, :length => 10) %></td>        
        <td><%= image_tag post.picture.url(:thumb) %></td>
        <td><%= link_to 'View', post, :class => 'btn btn-primary'%></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-success' %></td>  
        <td><%= link_to 'Delete', post, method: :delete, :class => 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
